SELECT DATE_ADD(NOW() , INTERVAL 1 DAY); -- this will return the date one day ahead
SELECT DATE_ADD(NOW() , INTERVAL 1 YEAR); -- this will return the date one year ahead
SELECT DATE_SUB(NOW() , INTERVAL 1 YEAR); -- this will return the date one year back
SELECT DATEDIFF('2019-01-05' , '2019-01-01'); -- this will return the difference in two dates
SELECT time_to_sec('09:02') - time_to_sec('09:00'); -- this will return the difference in two times
SELECT time_to_sec('09:02') -- by default it retuns the difference from midnight